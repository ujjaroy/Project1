@using Microsoft.AspNetCore.Components.Forms

<EditForm FormHandlerName="named-form-handler" Model="Parameter" method="POST" OnValidSubmit="() => _submitted = true" >
    <InputText @bind-Value="Parameter" />
    <input id="send" type="submit" value="Send" />
</EditForm>

@if (_submitted)
{
    <p id="pass">Hello @Parameter!</p>
}

@code{
    bool _submitted = false;

    [SupplyParameterFromForm(Name = "named-form-handler")] public string Parameter { get; set; } = "";
}
